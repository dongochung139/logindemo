<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150"
        android:src="@drawable/tinderbot"
        />

    <EditText
        android:id="@+id/taikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo"
        android:layout_marginBottom="-100dp"
        android:hint="Email or Phone"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/matkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/taikhoan"
        android:layout_marginBottom="-60dp"
        android:hint="Pass"
        android:textSize="30dp" />
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/matkhau"
        android:layout_marginBottom="-90dp"
        android:layout_centerInParent="true"
        android:text="Login" />
    <TextView
        android:id="@+id/dangnhapkhac"
        android:layout_width="wrap_content"
        android:layout_height="50"
        android:layout_alignBottom="@id/login"
        android:layout_marginBottom="-70dp"
        android:textSize="30dp"
        android:hint="Đăng nhập bằng cách khác"
        android:layout_centerInParent="true"
        />
    <Button
        android:layout_width="100"
        android:layout_height="50"
        android:layout_alignBottom="@id/dangnhapkhac"
        android:id="@+id/fb"
        android:layout_marginBottom="-70"
        android:background="@drawable/face"
            />
    <Button
        android:layout_width="100"
        android:layout_height="50"
        android:layout_alignBottom="@id/dangnhapkhac"
        android:background="@drawable/mail"
        android:layout_marginBottom="-70"
        android:layout_centerInParent="true"
        />
    <Button
        android:layout_width="100"
        android:layout_height="50"
        android:layout_alignBottom="@id/dangnhapkhac"
        android:layout_marginBottom="-70"
        android:background="@drawable/ins"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>

